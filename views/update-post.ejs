<!DOCTYPE html>
<html lang="en">
  <%- include("header") %>
  <body>
    <div class="container">
    <h1 style="margin: 50px 25px ;">update post</h1>

    <% data.forEach((Post)=>{ %>
    <form method="post" action="/up/:id">

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">ID</span>
        <input
          type="text"
          class="form-control"
          placeholder="Title"
          aria-label="Username"
          aria-describedby="basic-addon1"
           readonly
          value="<%=
        Post.id %>"
          name="id"
        />
      </div>


      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Title</span>
        <input
          type="text"
          class="form-control"
          placeholder="Title"
          aria-label="Username"
          aria-describedby="basic-addon1"
          value="<%=
        Post.title %>"
          name="title"
        />
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Body</span>
        <input
          type="text"
          value="<%= Post.body %>"
          class="form-control"
          placeholder="Article context"
          aria-label="Username"
          aria-describedby="basic-addon1"
          name="body"
        />
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Author</span>
        <input
          type="text"
          value="<%= Post.author %>"
          class="form-control"
          placeholder="Author"
          aria-label="Username"
          aria-describedby="basic-addon1"
          name="author"
        />
      </div>

      <div class="input-group mb-3">
        <select name="catagory" class="form-control">
          <option selected><%= Post.catagory %></option>
          <option name="Business">Business</option>
          <option name="Cars">Cars</option>
          <option name="Entertainment">Entertainment</option>
          <option name="Family">Family</option>
          <option name="Health">Health</option>
          <option name="Politics">Politics</option>
          <option name="Religion">Religion</option>
          <option name="Science">Science</option>
          <option name="Sports">Sports</option>
          <option name="Technology">Technology</option>
          <option name="Travel">Travel</option>
          <option name="Video">Video</option>
          <option name="World">World</option>
        </select>
      </div>
      <button type="submit"  class="btn btn-primary">submit</button>
    </form>
    <% }) %>
  </div>
  </body>
</html>
